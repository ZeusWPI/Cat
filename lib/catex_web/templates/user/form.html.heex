<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <label>
    Name: <%= text_input f, :name %>
  </label>
  <label>
    Gender: <%= text_input f, :gender %>
  </label>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
